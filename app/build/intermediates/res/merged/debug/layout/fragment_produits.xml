<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="fr.info.antillesinfov2.fragment.ProduitsFragment">

    <GridView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/gridView1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.85"
        android:background="#FFF"
        android:columnWidth="75dp"
        android:gravity="center"
        android:numColumns="4"
        android:stretchMode="columnWidth"
        tools:listitem="@layout/gridview_produit"></GridView>

    <LinearLayout
        android:id="@+id/linearConsigne"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.10">

        <Button
            android:id="@+id/addConsigne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/consigne"
            android:textColor="@android:color/black"
            android:textSize="@dimen/activity_vertical_margin"
            android:textStyle="bold"

            />

        <Button
            android:id="@+id/removeConsigne"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:text="@string/retour"
            android:textColor="@android:color/black"
            android:textSize="@dimen/activity_vertical_margin"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>
