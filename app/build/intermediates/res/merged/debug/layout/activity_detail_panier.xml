<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    android:baselineAligned="false"
    android:gravity="top|left"
    android:paddingBottom="@dimen/activity_min_padding"
    android:paddingLeft="@dimen/activity_min_padding"
    android:paddingRight="@dimen/activity_min_padding"
    android:paddingTop="@dimen/activity_min_padding"
    tools:context="fr.info.antillesinfov2.activity.DetailPanierActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.50"
        android:baselineAligned="false"
        android:gravity="top|left"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_horizontal"
            android:stretchColumns="0,1,2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_gravity="left|center_vertical"
                android:layout_weight="1">

                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="@string/date_commande"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="@string/nombre_d_articles"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dip"
                    android:text="@string/total_en"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal" />
            </TableRow>
        </TableLayout>

        <ListView
            android:id="@+id/liste_commandes"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="top|center_vertical"
            android:layout_weight="0.9"
            android:choiceMode="singleChoice"
            android:listSelector="@android:color/darker_gray"></ListView>
    </LinearLayout>

    <ListView
        android:id="@+id/detail_commande"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical|right"
        android:layout_marginTop="15dp"
        android:layout_weight="0.50"></ListView>

</LinearLayout>
